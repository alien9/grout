description "Gunicorn upstart script for Ashlar"

{% if developing_or_testing -%}
start on (vagrant-mounted)
{% else %}
start on (local-filesystems and net-device-up IFACE!=lo)
{% endif %}
stop on shutdown

respawn
setuid {{ app_username }}
chdir {{ root_app_dir }}

exec gunicorn --config {{ root_conf_dir }}/gunicorn.py --timeout {{ ashlar_session_timeout_s }} ashlar:app
